@model IEnumerable<bookingflightmvcUI.Models.Flight>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Started Booking Your Flights</h1>
</div>
<div class="my-2">
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="genreId">Airport</label>
            <select class="form-select" id="genreId" name="genreId">
                <option selected>Airport</option>
                
            </select>
        </div>

        <div class="col-12">
            <label class="visually-hidden" >Search by title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control"  id="sterm" name="sterm" placeholder="Search by title">
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Home/Index" class="btn btn-dark">Reset</a>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                FlightName
            </th>
            <th>
                Image
            </th>
            <th>
                Airport
            </th>
            <th>
                DepartureTime
            </th>
            <th>
                ArrivalTime
            </th>
            <th>
                AircraftType
            </th>
            <th>
                TicketPrice
            </th>
            <th>
                Duration
            </th>
            <th>
                NumberOfStops
            </th>
            <th>
                SeatClass
            </th>
            <th>
                BaggageRegulations
            </th>
            <th>
                AncillaryServices
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FlightName
                </td>
                <td>

                    <img src="@item.Image" style="width:80px;height:100px" alt="flight image" />

                </td>
                <td>
                    @item.AirportName
                </td>
                <td>
                    @item.departureTime
                </td>
                <td>
                    @item.arrivalTime
                </td>
                <td>
                    @item.AircraftType
                </td>
                <td>
                    @item.ticketPrice
                </td>
                <td>
                    @item.duration
                </td>
                <td>
                    @item.numberOfStops
                </td>
                <td>
                    @item.seatClass
                </td>
                <td>
                    @item.baggageRegulations
                </td>
                <td>
                    @item.ancillaryServices
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

