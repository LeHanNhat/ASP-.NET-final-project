@model IEnumerable<bookingflightmvcUI.Models.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FlightName
            </th>
            <th>
               Image
            </th>
            <th>
                Airport
            </th>
            <th>
                DepartureTime
            </th>
            <th>
               ArrivalTime
            </th>
            <th>
                AircraftType
            </th>
            <th>
                TicketPrice
            </th>
            <th>
                Duration
            </th>
            <th>
               NumberOfStops
            </th>
            <th>
                SeatClass
            </th>
            <th>
                BaggageRegulations
            </th>
            <th>
                AncillaryServices
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.FlightName
            </td>
            <td>
                   
                        <img src="@item.Image" style="width:80px;height:100px" alt="flight image" />
                    
            </td>
            <td>
                @item.Airport.AirportName
            </td>
            <td>
                @item.departureTime
            </td>
            <td>
                @item.arrivalTime
            </td>
            <td>
                @item.AircraftType
            </td>
            <td>
                @item.ticketPrice
            </td>
            <td>
                @item.duration
            </td>
            <td>
                @item.numberOfStops
            </td>
            <td>
                @item.seatClass
            </td>
            <td>
                @item.baggageRegulations
            </td>
            <td>
                @item.ancillaryServices
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
